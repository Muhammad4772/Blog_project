
<div class="full-title">
  <div class="container">
   <!-- Page Heading/Breadcrumbs -->
   <h1 class="mt-4 mb-3">Show Blog Detail
    <small>VHC</small>
  </h1>
</div>
</div>
<!-- Page Content -->
<div class="container">
  <div class="breadcrumb-main">
   <ol class="breadcrumb">
    <li class="breadcrumb-item">
     <%= link_to 'Home', home_path, class: "breadcrumb-item" %>
   </li>
   <li class="breadcrumb-item active">show</li>
 </ol>
</div>
<div class="row">
  <!-- Post Content Column -->
  <div class="col-lg-8">
    <!-- Preview Image -->
    <p id="notice"><%= notice %></p>
    <% if @blog.image.attached? %>
    <%= image_tag main_app.url_for(@blog.image),size: "300x300"%>
    <% else %>
    <%= image_tag("No-image.jpg")%>
    <% end %>
    <hr>
    <!-- Date/Time -->
    <p> <%= @blog.created_at.strftime("%d %b. %Y") %></p>
    <hr>
    <!-- Post Content -->
    <h2 class="card-title"><%= @blog.Tittle %></h2>
    <p class="lead"><%= @blog.Discription %></p>
    <hr>
    <div class="blog-right-side">
      <!-- Comments Form -->

      <div class="card my-4">
       <h5 class="card-header">Leave a Comment:</h5>
         <!--	<form> -->
          <%= form_for [@blog, @comment], remote: true do |form| %>
          <div class="form-group">
           <!--	<textarea class="form-control" rows="3"></textarea> -->
           <%= form.label :description,class: "card-header" %>
           <%= form.text_area :description,class: "form-control" %> 
         </div>
         <%= form.submit 'SUBMIT', class: 'btn btn-primary' %>
         <% end %>
         <!--</form> -->
       
     </div>
   </div>
   <div class="card-body" id="comment_pane">
   <p id="notice"><%= notice %></p>
   <% @blog_comments.each do |comment| %>  
      <%= render 'comments/comment', comment: comment %>
  <% end %>
  <!-- Comment with nested comments in comment partial -->
</div>
</div>
<!-- Sidebar Widgets Column -->
<div class="col-md-4 blog-right-side">
  <!-- Search Widget -->
  <div class="card mb-4">
    <h5 class="card-header">Search</h5>
    <div class="card-body">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search for...">
        <span class="input-group-btn">
          <button class="btn btn-secondary" type="button">Go!</button>
        </span>
      </div>
    </div>
  </div>
  <!-- Categories Widget -->
  <div class="card my-4">
    <h5 class="card-header">Categories</h5>
    <div class="card-body">
      <div class="row">
        <div class="col-lg-6">
          <ul class="list-unstyled mb-0">
            <li>
              <a href="#">Fruits</a>
            </li>
            <li>
              <a href="#">Vagetables</a>
            </li>
            <li>
              <a href="#">Seeds</a>
            </li>
          </ul>
        </div>
        <div class="col-lg-6">
          <ul class="list-unstyled mb-0">
            <li>
              <a href="#">Medicans</a>
            </li>
            <li>
              <a href="#">Home Remedies</a>
            </li>
            <li>
              <a href="#"></a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <!-- Side Widget -->
  <div class="card my-4">
    <h5 class="card-header">Side Widget</h5>
    <div class="card-body">
      You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
    </div>
  </div>
</div>
</div>
<!-- /.row -->
</div>
<!-- /.container -->


